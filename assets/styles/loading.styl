@keyframes loaderPulseDelay
  0%, 80%, 100%
    transform scale(0)
  40%
    transform scale(1.0)

.loader
  margin 100px auto 0
  width 100px
  text-align center

.loader > div
  width 16px
  height 16px
  margin 0 5px
  background-color #000
  border-radius 100%
  display inline-block
  animation loaderPulseDelay 1.4s infinite ease-in-out both

.loader .bounce1
  animation-delay -0.32s

.loader .bounce2
  animation-delay -0.16s
