// --- Color Palette -----------------------------------------------------------

// Border
$gray-border ?= #F1F2F3

// --- Bootstrap Overrides -----------------------------------------------------

// Colours
$gray-base = #263C42
$gray-darker = #344A50
$gray-dark = #466269
$gray-neutral = #738286
$gray-light = #B3C0C3
$gray-lighter = #F5F8F9

$brand-primary = #78CAB1
$brand-danger = #D65151

// --- Typography --------------------------------------------------------------

// The basics
$font-family-body ?= 'Fira Sans', Helvetica, Arial, sans-serif
$font-family-header ?= $font-family-body
$font-size ?= 14px
$line-height ?= 1.75

// --- Structure & Layout ------------------------------------------------------

// Animation & transitions
$animation-speed ?= 200ms

listItemPadding()
  padding 4px halfGutter()

halfGutter()
  $grid-gutter-width / 2
