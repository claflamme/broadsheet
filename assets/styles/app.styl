@import 'variables'
@import 'bootstrap'
@import 'subscriptions'
@import 'reader'

@import 'elements/button'
@import 'elements/input'
@import 'elements/badge'
@import 'elements/loader'

html
  height: 100%

body
  background linear-gradient(to bottom, #fff 0%, $gray-lighter 100%);
  margin 0
  font ($font-size * 1.3)/$line-height $font-family-body
  font-weight 300
  height 100%
  color $gray

  +sm()
    font-size $font-size

h1, h2, h3, h4, h5, h6
  font-family $font-family-header
  letter-spacing -0.03em
  color $gray-dark
  font-weight 500

b, strong
  font-weight 500

hr
  border 2px solid $gray-border
  margin-bottom 30px

.height-100
  height 100%

.articlesList
  margin 0
  padding 0
  list-style-type none

  li
    border-bottom 1px solid $gray-border
    margin 0 halfGutter() * -1
    padding halfGutter()
    cursor pointer
    transition box-shadow 100ms

    +sm()
      padding 8px halfGutter()

    &:hover
      box-shadow inset 5px 0 0 0 darken($gray-lighter, 10)

  li.active
    box-shadow inset 5px 0 0 0 $brand-primary

button.load-more-articles
  margin halfGutter() 0

.article-title
  color $gray-dark
  font-weight 400
  margin 0
  overflow hidden
  text-overflow ellipsis

  +sm()
    font-weight 500

.article-preview
  color $gray-light
  font-weight 300
  display none

  +sm()
    display inline

.dashboardGrid
  background #fff
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  overflow hidden

  & > .row
    height 100%

.dashboard-col
  height 100%
  overflow-y auto

.feedTitleBar
  padding halfGutter()
  padding-left halfGutter() * 3
  border-bottom 1px solid $gray-border

  +sm()
    position absolute
    background-color white
    width "calc(100% - %s)" % halfGutter()
    height $feed-title-bar-height
    padding-left halfGutter()
    z-index 1
    box-shadow 0 10px 15px -10px rgba(0, 0, 0, 0.1)

  .mobile-menu-button
    position absolute
    left halfGutter()
    font-size 24px

    &.fa-times
      display none

    +sm()
      display none

  .feed-title
    margin 0
    overflow-x hidden
    white-space nowrap
    text-overflow ellipsis

.feed-title-bar-icons
  font-size 1.1em
  margin 10px halfGutter() * -1 0
  padding 0 halfGutter()
  list-style-type none
  overflow hidden
  display none

  +sm()
    display block

  li
    display inline-block
    float left
    margin-right halfGutter()
    line-height 0

  .fa
    margin-right (halfGutter()/ 3)

  a
    cursor pointer
    color $gray-light

  a:hover
    color $gray
    text-decoration none

.slide
  transition none
  opacity 0
  transform translateY(50px)
  display block !important

  &.up
    transition transform 300ms ease-out
    opacity 1
    transform translateY(0)

blockquote
  font-size 1.2em
  font-weight 300
  font-style italic
  color $gray-light
  border-left 5px solid $gray-border

.dropdown-menu
  border none

.dropdown-menu > li > a
  padding 5px 10px
  color $gray-dark

.auth-prompt
  padding-top halfGutter() * 5

.show-mobile-menu
  .feedTitleBar
    .fa-times
      display inline
    .fa-bars
      display none
  +xs()
    .article-list-col
      transform translateX(250px)
