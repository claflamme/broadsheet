@import 'variables'
@import 'bootstrap'
@import 'loading'
@import 'subscriptions'

@import 'elements/button'

body
  font $font-size/$line-height $font-family-body
  height 100%
  color $palette-neutral

h1, h2, h3, h4, h5, h6
  font-family $font-family-header
  letter-spacing -0.03em
  color $palette-dark

.btn
  border none

.btn-primary
  background-image linear-gradient(25deg, $palette-accent-secondary -35%, $palette-accent-primary 135%)
  transition opacity 200ms

  &:hover
    opacity 0.8

.articlesList
  margin 0
  padding 0
  list-style-type none

  li
    border-top 1px solid $border-color
    margin 0 halfGutter() * -1
    padding 8px halfGutter()
    cursor pointer
    transition all 200ms

  li:hover .articleSummary
    transform translateX(5px)

  li.active
    background-image linear-gradient(rgba(0,0,0,0.05), rgba(0, 0, 0, 0) 3px)
    background-color $palette-lighter

    .articleSummary
      transform translate(0)

.articleSummary
  transition 200ms all

.articleTitle
  color $palette-dark
  font-weight 500
  margin 0

.articlePreview
  color $palette-light
  font-weight 300

.dashboardGrid
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  overflow hidden

  & > .row
    height 100%

.dashboardCol
  height 100%
  overflow-y auto

.feedTitleBar .feedTitle
  margin halfGutter()
  margin-left 0
  display inline-block

.feedTitleBarIcons
  display inline-block
  float right
  font-size ($font-size-h3 / 1.5)
  line-height $font-size-h3 + $grid-gutter-width

  .fa
    cursor pointer
    color $palette-light

  .fa:hover
    color $palette-neutral

.articleContent
  border-left 1px solid $border-color
  padding 0
  overflow hidden
  font-size 16px

  a:link, a:visited, a:active
    color $palette-dark
    text-decoration underline

  .articlePlaceholder
    text-align center
    position relative
    top 50%
    transform translateY(-50%)

  .articleWrapper
    height 100%
    overflow-y auto
    padding $grid-gutter-width * 1.5

  .articleBody
    max-width 600px
    margin auto

    [class*='caption']
      text-align center
      font-size 14px
      font-style italic
      padding 0 $grid-gutter-width

  img
    width 100%
    height auto
    border-radius 5px

  h1
    margin 0 0 $grid-gutter-width 0
    font-weight 600

    a:link, a:visited, a:active
      color $palette-darker
      text-decoration none

  h2, h3, h4, h5, h6
    margin $grid-gutter-width 0

  p, ul, ol, img
    margin-bottom $grid-gutter-width

  // Sometimes images are inside of their own P tag, in which case they would
  // get the margin applied twice.
  p img
    margin 0

.slide
  transition all 300ms ease-out
  opacity 0
  transform translateY(50px)
  display block !important

  &.up
    transition all 300ms
    opacity 1
    transform translateY(0)

blockquote
  font-size 1.2em
  font-weight 300
  font-style italic
  color $palette-light
  border-left 5px solid $palette-lighter

  b, strong
    font-weight 500
