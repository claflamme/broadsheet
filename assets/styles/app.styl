@import 'variables'
@import 'bootstrap'
@import 'loading'
@import 'subscriptions'

@import 'grid'

@import 'elements/button'
@import 'elements/input'
@import 'elements/badge'
@import 'elements/dropdown'

body
  margin 0
  font $font-size/$line-height $font-family-body
  height 100%
  color $palette-neutral

h1, h2, h3, h4, h5, h6
  font-family $font-family-header
  letter-spacing -0.03em
  color $palette-dark

.articlesList
  margin 0
  padding 0
  list-style-type none

  li
    border-bottom 1px solid $palette-border
    margin 0 $gutter-size * -1
    padding 8px $gutter-size
    cursor pointer
    transition all 100ms

  li:hover
    box-shadow inset 5px 0 0 0 darken($palette-lighter, 10)

  li.active
    box-shadow inset 5px 0 0 0 $palette-accent-primary

    .articleSummary
      transform translate(0)

.articleSummary
  transition 200ms all

.articleTitle
  color $palette-dark
  font-weight 500
  margin 0

.articlePreview
  color $palette-light
  font-weight 300

.dashboardGrid
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  overflow hidden

  & > .row
    height 100%

.dashboardCol
  height 100%
  overflow-y auto

  .loader
    margin-top 100px

.feedTitleBar
  margin 0 $gutter-size * -1
  padding $gutter-size
  padding-top 0
  border-bottom 1px solid $palette-border

  .feedTitle
    margin 0

.feedTitleBarIcons
  font-size 1.1em
  margin 10px $gutter-size * -1 0
  padding 0 $gutter-size
  list-style-type none
  overflow hidden

  li
    display inline-block
    float left
    margin-right $gutter-size
    line-height 0

  .fa
    margin-right ($gutter-size/ 3)

  a
    cursor pointer
    color $palette-light

  a:hover
    color $palette-neutral
    text-decoration none

.articleContent
  border-left 1px solid $palette-border
  padding 0
  overflow hidden
  font-size 16px

  a:link, a:visited, a:active
    color $palette-dark
    text-decoration underline

  .articlePlaceholder
    text-align center
    position relative
    top 50%
    transform translateY(-50%)

  .articleWrapper
    height 100%
    overflow-y auto
    padding $gutter-size * 3

  .articleBody
    max-width 600px
    margin auto

    [class*='caption']
      text-align center
      font-size 14px
      font-style italic
      padding 0 $gutter-size * 2
      margin-bottom $gutter-size * 2

  img
    width 100%
    height auto
    border-radius 5px

  h1
    margin 0 0 ($gutter-size * 2) 0
    font-weight 600

    a:link, a:visited, a:active
      color $palette-darker
      text-decoration none

  h2, h3, h4, h5, h6
    margin ($gutter-size * 2) 0

  p, ul, ol, img
    margin-bottom ($gutter-size * 2)

  // Sometimes images are inside of their own P tag, in which case they would
  // get the margin applied twice.
  p img
    margin 0

.slide
  transition none
  opacity 0
  transform translateY(50px)
  display block !important

  &.up
    transition all 300ms ease-out
    opacity 1
    transform translateY(0)

blockquote
  font-size 1.2em
  font-weight 300
  font-style italic
  color $palette-light
  border-left 5px solid $palette-border

  b, strong
    font-weight 500
