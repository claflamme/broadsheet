@import 'variables'
@import 'bootstrap'
@import 'subscriptions'

@import 'elements/button'
@import 'elements/input'
@import 'elements/badge'
@import 'elements/loader'

@import 'components/app-nav'
@import 'components/feed-title-bar'
@import 'components/article-list'
@import 'components/article-display'

html
  height: 100%

body
  background linear-gradient(to top, #fff 0%, $gray-lighter 100%);
  margin 0
  font ($font-size * 1.3)/$line-height $font-family-body
  font-weight 300
  height 100%
  color $gray

  +sm()
    font-size $font-size

h1, h2, h3, h4, h5, h6
  font-family $font-family-header
  letter-spacing -0.03em
  color $gray-dark
  font-weight 500

b, strong
  font-weight 500

hr
  border 2px solid $gray-border
  margin-bottom 30px

.height-100
  height 100%

.my-1
  margin halfGutter() 0

.mx-1
  margin 0 halfGutter()

.mt-1
  margin-top halfGutter()

.dashboardGrid
  background $gray-lighter
  position absolute
  top $app-nav-height
  bottom 0
  left 0
  right 0
  overflow hidden

  & > .row
    height 100%

.dashboard-col
  height 100%
  overflow-y auto

  +sm()
    &::-webkit-scrollbar
      width 6px

    &::-webkit-scrollbar-thumb
      background-color lighten($gray-light, 25%)
      outline 0

.slide
  opacity 0
  transform translateY(50px)
  display block !important

  &.up
    transition transform 300ms ease-out, opacity 150ms ease-out
    opacity 1
    transform translateY(0)

blockquote
  font-size 1.2em
  font-weight 300
  font-style italic
  color $gray-light
  border-left 5px solid $gray-border

.dropdown-menu
  border none

.dropdown-menu > li > a
  color $gray-dark

.auth-prompt
  padding-top halfGutter() * 5

.show-mobile-menu
  +xs()
    .article-list-col
      transform translateX(250px)
