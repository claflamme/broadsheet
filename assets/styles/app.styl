@import 'variables'
@import 'bootstrap'

body
  height 100%

h1, h2, h3, h4, h5, h6
  letter-spacing -0.05em

.btn
  border none

.btn-primary
  background-image linear-gradient(25deg, rgba(64,136,196,1) -35%,rgba(110,205,177,1) 135%)
  transition opacity 200ms

  &:hover
    opacity 0.8

.subscriptions
  background #fbfbfb
  padding-top halfGutter()

.subscriptionsList
  list-style-type none
  margin 0 halfGutter() * -1
  padding halfGutter()0 0 0

  li > a
    display block
    padding 4px halfGutter()

    &:link, &:visited, &:active
      color $navbar-default-color
      text-decoration none

    &:hover
      background-color #f6f6f6
      text-decoration none

    &.active
      background-color #f2f2f2
      font-weight 400
      color $brand-primary

.articlesList
  margin 0
  padding 0
  list-style-type none

  li
    border-bottom 1px solid borderColor
    margin 0 halfGutter() * -1
    padding 8px halfGutter()
    transition all 200ms
    cursor pointer

  li:hover
    background-color #fafafa

.articleTitle
  color #444
  font-weight 500
  margin 0
  white-space nowrap
  overflow-x hidden

.articleSubscriptionTitle, .articleSummary
  white-space nowrap
  overflow hidden

.articleSubscriptionTitle:after
  content: ''
  height 100%
  width 10px
  position absolute
  box-shadow 0px 0px 15px 5px #fff
  right -10px

.dashboardGrid
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  overflow hidden

  .row
    height 100%

.dashboardCol
  height 100%
  overflow-y auto
  border-right 1px solid borderColor

.articleListCol
  transition width 200ms

.articleContent
  width 50%
  transform translateX(100%)
  transition transform 200ms
  position absolute
  right 0
  padding 0
  padding-left $grid-gutter-width * 1.5
  overflow hidden
  box-shadow 0 0 45px rgba(0, 0, 0, 0.2)
  font-size 16px

  .articleWrapper
    height 100%
    overflow-y auto
    padding $grid-gutter-width * 1.5

  .articleBody
    max-width 700px
    margin auto
    font-weight 300

    [class*='caption']
      font-size 14px
      font-style italic
      padding 0 $grid-gutter-width

  img
    max-width 100%
    height auto

  h1
    margin 0 0 $grid-gutter-width 0
    font-weight 600

    a:link, a:visited, a:active
      color #000

  h2, h3, h4, h5, h6
    margin $grid-gutter-width 0

  p, ul, ol
    margin-bottom $grid-gutter-width

.closeArticleContent
  background #fbfbfb
  cursor pointer
  position absolute
  height 100%
  top 0
  left 0
  width $grid-gutter-width * 1.5
  text-align center
  border-right 1px solid borderColor
  transition background-color 200ms

  &:hover
    background-color #f6f6f6

  .closeButton
    position relative
    top 50%
    transform translateY(-50%)

.dashboardGrid.articleOpen

  .articleListCol
    width 33.333%

  .articleContent
    transform translateX(0)
