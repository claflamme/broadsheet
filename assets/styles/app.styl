@import 'variables'
@import 'bootstrap'
@import 'loading'
@import 'subscriptions'
@import 'code'

@import 'elements/button'
@import 'elements/input'
@import 'elements/badge'

html
  height: 100%

body
  background linear-gradient(to bottom, #fff 0%, $gray-lighter 100%);
  margin 0
  font $font-size/$line-height $font-family-body
  font-weight 300
  height 100%
  color $gray

h1, h2, h3, h4, h5, h6
  font-family $font-family-header
  letter-spacing -0.03em
  color $gray-dark
  font-weight 500

b, strong
  font-weight 500

hr
  border 2px solid $gray-border
  margin-bottom 30px

.articlesList
  margin 0
  padding 0
  list-style-type none

  li
    border-bottom 1px solid $gray-border
    margin 0 halfGutter() * -1
    padding halfGutter()
    cursor pointer
    transition all 100ms

    +sm()
      padding 8px halfGutter()

  li:hover
    box-shadow inset 5px 0 0 0 darken($gray-lighter, 10)

  li.active
    box-shadow inset 5px 0 0 0 $brand-primary

    .article-summary
      transform translate(0)

button.load-more-articles
  margin 50px 0

.article-summary
  transition 200ms all

.article-title
  color $gray-dark
  font-weight 400
  margin 0
  overflow hidden
  text-overflow ellipsis

  +sm()
    font-weight 500

.article-preview
  color $gray-light
  font-weight 300
  display none

  +sm()
    display inline

.dashboardGrid
  background #fff
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  overflow hidden

  & > .row
    height 100%

.dashboard-col
  height 100%
  overflow-y auto

.article-list-col
  transition transform 200ms

.feedTitleBar
  margin 0 halfGutter() * -1
  padding halfGutter()
  padding-left halfGutter() * 3
  border-bottom 1px solid $gray-border

  +sm()
    padding-left halfGutter()

  .mobile-menu-button
    position absolute
    left halfGutter()
    font-size 24px

    &.fa-times
      display none

    +sm()
      display none

  .feed-title
    margin 0
    overflow-x hidden
    white-space nowrap
    text-overflow ellipsis

.feed-title-bar-icons
  font-size 1.1em
  margin 10px halfGutter() * -1 0
  padding 0 halfGutter()
  list-style-type none
  overflow hidden
  display none

  +sm()
    display block

  li
    display inline-block
    float left
    margin-right halfGutter()
    line-height 0

  .fa
    margin-right (halfGutter()/ 3)

  a
    cursor pointer
    color $gray-light

  a:hover
    color $gray
    text-decoration none

.articleContent
  border-left 1px solid $gray-border
  padding 0
  overflow hidden
  font-size 16px
  font-weight 300

  a
    text-decoration underline

  .articlePlaceholder
    text-align center
    position relative
    top 50%
    transform translateY(-50%)

  .article-wrapper
    position fixed
    background-color #fff
    top 0
    left 0
    height 100%
    overflow-y auto
    padding halfGutter()
    transition transform $animation-speed
    transform translateX(100%)

    &.show-mobile-reader
      transform translateX(0)

    +sm()
      position static
      background-color transparent
      transform translateX(0)
      padding halfGutter() * 3

  .article-body
    max-width 600px
    margin auto

    [class*='caption'], figcaption
      text-align center
      font-size 14px
      font-style italic
      padding 0 $grid-gutter-width
      margin-bottom $grid-gutter-width

    .article-close-button
      margin-bottom halfGutter()

      +sm()
        display none

  img
    width 100%
    height auto
    border-radius 5px

  h1
    margin 0 0 ($grid-gutter-width) 0
    font-weight 500

    a:link, a:visited, a:active
      color $gray-darker
      text-decoration none

  h2, h3, h4, h5, h6
    margin ($grid-gutter-width) 0
    line-height 1.5em

  p, ul, ol, img
    margin-bottom ($grid-gutter-width)

  // Sometimes images are inside of their own P tag, in which case they would
  // get the margin applied twice.
  p img
    margin 0

  table
    font-size 0.9em
    margin-bottom ($grid-gutter-width)
    width 100%

    thead
      border-bottom 1px solid $gray-border

    th
      font-weight 500

    th, td
      padding 5px 0

.slide
  transition none
  opacity 0
  transform translateY(50px)
  display block !important

  &.up
    transition all 300ms ease-out
    opacity 1
    transform translateY(0)

blockquote
  font-size 1.2em
  font-weight 300
  font-style italic
  color $gray-light
  border-left 5px solid $gray-border

.dropdown-menu
  border none

.dropdown-menu > li > a
  padding 5px 10px
  color $gray-dark

.auth-prompt
  +sm()
    margin-top halfGutter() * 5

.show-mobile-menu
  .feedTitleBar
    .fa-times
      display inline
    .fa-bars
      display none
  +xs()
    .article-list-col
      transform translateX(250px)
