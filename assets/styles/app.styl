@import 'variables'
@import 'bootstrap'

body
  height 100%

.btn-primary
  background-image linear-gradient(25deg, rgba(64,136,196,1) -35%,rgba(110,205,177,1) 135%)
  transition opacity 200ms

  &:hover
    opacity 0.8

.subscriptions
  background #fbfbfb
  padding-top ($grid-gutter-width / 2)

.subscriptionsList
  list-style-type none
  margin 0 ($grid-gutter-width / 2) * -1
  padding ($grid-gutter-width / 2) 0 0 0

  li > a
    display block
    padding 4px ($grid-gutter-width / 2)
    transition all 300ms

    &:link, &:visited, &:active
      color $navbar-default-color
      text-decoration none

    &:hover
      background-color #f6f6f6
      text-decoration none

    &.active
      background-color #f2f2f2
      font-weight 400
      color $brand-primary

.articlesList
  margin 0
  padding 0
  list-style-type none

  li
    border-bottom 1px solid borderColor
    margin 0 ($grid-gutter-width / 2) * -1
    padding 8px ($grid-gutter-width / 2)
    transition all 200ms
    cursor pointer

  li:hover
    background-color #fafafa

.articleTitle
  color #444
  font-weight 700
  margin 0
  white-space nowrap
  overflow-x hidden

.articleSubscriptionTitle, .articleSummary
  white-space nowrap
  overflow hidden

.articleSubscriptionTitle:after
  content: ''
  height 100%
  width 10px
  position absolute
  box-shadow 0px 0px 15px 5px #fff
  right -10px

.dashboardGrid
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  overflow hidden

  .row
    height 100%

.dashboardCol
  height 100%
  overflow-y auto
  border-right 1px solid borderColor
