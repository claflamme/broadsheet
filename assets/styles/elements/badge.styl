.user-badge
  margin ($gutter-size * -1)
  margin-bottom 0
  transition 200ms background-color

  &:hover
    background-color darken($palette-lighter, 5)

  .dropdown, button
    width 100%
    text-align left

  button, button:hover, button:focus
    padding $gutter-size
    color $palette-dark
    font-weight 500
    text-decoration none

  .fa
    margin-top 3px

  .dropdown-menu
    right 0
    margin 0 $gutter-size
    margin-top -5px
