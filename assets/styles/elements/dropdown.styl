ul.dropdown-list
  visibility hidden
  position absolute
  background white
  min-width 200px
  box-shadow 0 0 10px rgba(0, 0, 0, 0.1)
  left $gutter-size * 2
  padding ($gutter-size / 2) $gutter-size
  border-radius $border-radius
  z-index 10
  opacity 0
  transform translateY($gutter-size * -1)
  transition all $animation-speed
  font-weight 400

  & > li > a
    listItemPadding()
    margin 0 ($gutter-size * -1)
    border-radius 0

.user-badge.opened .dropdown-list
  transform translateY($gutter-size / 2)
  visibility visible
  opacity 1
