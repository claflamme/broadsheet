button

.button
  display inline-block
  background-color $palette-accent-secondary
  text-align center
  vertical-align middle
  cursor pointer
  border none
  border-radius ($gutter / 3)
  white-space nowrap
  user-select none
  padding ($gutter / 2) $gutter
  color $palette-lighter
  transition all ($animation-speed / 2)

  &:hover
    background-color darken($palette-accent-secondary, 5)

  &:focus
    outline none
    box-shadow 0 0 0 3px lighten($palette-accent-secondary, 35)

  &:focus:active
    box-shadow inset 0 3px 5px rgba(0, 0, 0, 0.3), 0 0 0 3px lighten($palette-accent-secondary, 35)

.button.primary
  background-color $palette-accent-primary

  &:hover
    background-color darken($palette-accent-primary, 5)

.button.danger
  background-color $palette-danger

  &:hover
    background-color darken($palette-danger, 5)

.button.block
  display block
  width 100%

// --- Other Contexts ----------------------------------------------------------

.modal-footer .button + .button
  margin-left ($gutter / 3)
