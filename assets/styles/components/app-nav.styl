.app-nav
  background-color white
  border 0
  border-radius 0
  box-shadow $card-shadow
  height $app-nav-height
  min-height $app-nav-height
  margin 0
  line-height $app-nav-height
  z-index 5

  .logo
    display inline-block
    float left
    margin 0
    line-height $app-nav-height

.mobile-menu-button
  display inline-block
  float left
  margin-right halfGutter()
  font-size 24px
  line-height $app-nav-height
  color $gray-dark

  +sm()
    display none

  &.fa-times
    display none
