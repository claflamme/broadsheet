.feed-title-bar

  &__title
    margin 0
    overflow-x hidden
    white-space nowrap
    text-overflow ellipsis
    line-height $app-nav-height

  &__icon-list
    font-size 1.1em
    line-height $app-nav-height
    list-style-type none
    padding 0
    margin 0
    overflow hidden
    display none

    +sm()
      display block

  &__icon
    display inline-block
    margin-left halfGutter()
    line-height 0

    .fa
      margin-right (halfGutter() / 3)

    a
      cursor pointer
      color $gray-light

    a:hover
      color $gray
      text-decoration none
