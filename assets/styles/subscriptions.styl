.subscriptions
  background $gray-lighter
  padding-top halfGutter()

  .subscriptions-section
    padding-top (halfGutter() / 2)
    padding-bottom (halfGutter() / 2)

  ul.subscriptions-list
    list-style-type none
    margin 0 0 0 halfGutter()* -1
    padding 0

    li > a
      display block
      listItemPadding()
      border-radius 0 5px 5px 0
      transition background-color $animation-speed
      white-space nowrap
      overflow-x hidden
      text-overflow ellipsis

      &:link, &:visited, &:active
        color $gray
        text-decoration none

      &:hover
        background-color darken($gray-lighter, 5)
        text-decoration none

      &.active
        color $gray-dark
        background-color darken($gray-lighter, 5)
        font-weight 500

      .subscriptionIcon
        width 16px
        height 16px
        margin-right halfGutter()
        border-radius 4px
