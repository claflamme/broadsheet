.subscriptions
  background $paletteLighter
  padding-top halfGutter()

.subscriptionsList
  list-style-type none
  margin 0 0 0 halfGutter() * -1
  padding halfGutter() 0 0 0

  li > a
    display block
    padding 4px halfGutter()
    border-radius 0 5px 5px 0

    &:link, &:visited, &:active
      color $paletteNeutral
      text-decoration none

    &:hover
      background-color darken($paletteLighter, 5)
      text-decoration none

    &.active
      color $paletteDark
      background-color darken($paletteLighter, 10)
