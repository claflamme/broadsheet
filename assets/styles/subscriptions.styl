.subscriptions
  background $palette-lighter
  padding-top $gutter-size

  .subscriptions-section
    padding-top ($gutter-size / 2)
    padding-bottom ($gutter-size / 2)

  ul
    list-style-type none
    margin 0 0 0 $gutter-size* -1
    padding 0

    li > a
      display block
      listItemPadding()
      border-radius 0 5px 5px 0
      transition background-color $animation-speed

      &:link, &:visited, &:active
        color $palette-neutral
        text-decoration none

      &:hover
        background-color darken($palette-lighter, 5)
        text-decoration none

      &.active
        color $palette-dark
        background-color darken($palette-lighter, 5)
        font-weight 500

      .subscriptionIcon
        width 16px
        height 16px
        margin-right $gutter-size
        border-radius 4px
